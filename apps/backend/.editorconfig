# EditorConfig for Symphony Backend
# Ensures consistent coding styles across different editors and IDEs

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust source files
[*.rs]
indent_style = tab
indent_size = 4
max_line_length = 100

# TOML files
[*.toml]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2
