{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/web",
    "packages/components/*"
  ],
  "type": "module",
  "scripts": {
    "preinstall": "node pnpm-prepare.js",
    "server": "jake server",
    "server_dev": "jake server_dev",
    "server_build": "jake server_build",
    "desktop": "jake desktop",
    "build_desktop": "jake build_desktop",
    "test": "jake core_tests web_tests",
    "check-deps": "check-dependency-version-consistency",
    "lint": "eslint apps/web frontend/* --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write frontend/core",
    "quality": "pnpm run lint && pnpm run format && echo 'Quality check passed!'",
    "dev": "turbo run dev --parallel",
    "prepare": "husky install",
    "sb:build": "storybook build -c .storybook -o ./dist/storybook/build/",
    "sb:watch": "concurrently 'pnpm run tw:watch' 'pnpm run sb'",
    "sb": "storybook dev -p 6006",
    "tw": "cd apps/web && npx tailwind -i src/index.css -o ../../dist/styles/tailwind.css",
    "tw:watch": "cd apps/web && npx tailwind -i src/index.css -o ../../dist/styles/tailwind.css --watch"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "hotkeys-js": "^3.13.15",
    "jotai": "^2.12.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "9.0.16",
    "@storybook/addon-onboarding": "9.0.16",
    "@storybook/react": "^9.0.16",
    "@storybook/react-vite": "9.0.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.0",
    "check-dependency-version-consistency": "^5.0.1",
    "commitlint": "^19.8.1",
    "config": "workspace:*",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "jake": "^10.9.2",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "lighthouse": "^12.7.1",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "storybook": "9.0.16",
    "tailwindcss": "3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "latest",
    "vitest": "latest"
  },
  "packageManager": "pnpm@9.1.2"
}
